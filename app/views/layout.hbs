<!DOCTYPE html>
<html ng-app="app">
  <head>
    <title>{{title}}</title>
    <!--<link rel='stylesheet' href='/stylesheets/style.css' />-->
    <link rel="stylesheet" href="js/jspm_packages/github/angular/bower-material@0.10.0/angular-material.css" />
      <link rel="stylesheet" href="js/jspm_packages/npm/angular-grid@1.12.4/dist/angular-grid.css" />
      <link rel="stylesheet" href="js/jspm_packages/npm/angular-grid@1.12.4/dist/theme-fresh.css" />
    <link rel="stylesheet" href="stylesheets/style.css" />
    <!--<script src="//localhost:35729/livereload.js"></script>-->
  </head>
  <body layout="column">
  <div ng-controller="toolBarCtrl as toolBar">
  <md-toolbar ng-show="!toolBar.showSearch" >
      <div class="md-toolbar-tools">
          <md-button ng-click="toolBar.toggleSideNav('left')" hide-gt-md aria-label="Menu">
              <ng-md-icon icon="menu"></ng-md-icon>
          </md-button>
          <h3>
              Dashboard
          </h3>
          <span flex></span>
          <md-button aria-label="Search" ng-click="toolBar.showSearch = !toolBar.showSearch">
              <ng-md-icon icon="search"></ng-md-icon>
          </md-button>
          <!--<md-button aria-label="Open Settings" ng-click="showListBottomSheet($event)">-->
              <!--<ng-md-icon icon="more_vert"></ng-md-icon>-->
          <!--</md-button>-->
          <md-menu>
              <!-- Trigger element is a md-button with an icon -->
              <md-button data-ng-click="toolbar.openMenu()" class="md-icon-button" aria-label="Open sample menu">
                  <ng-md-icon icon="more_vert"></ng-md-icon>
              </md-button>
              <md-menu-content>
                  <md-menu-item><md-button ng-click="doSomething()">Do Something</md-button></md-menu-item>
              </md-menu-content>
          </md-menu>
      </div>
      <!--<md-tabs md-stretch-tabs class="md-primary">-->
          <!--{{#each tabs}}-->
              <!--<md-tab>-->
                  <!--<md-tab-label>-->
                     <!--<a ng-click="toolBar.onConferenceChanged({{confId}})"> {{name}}</a>-->
                  <!--</md-tab-label>-->
              <!--</md-tab>-->
          <!--{{/each}}-->
      <!--</md-tabs>-->
  </md-toolbar>
  <md-toolbar class="md-hue-1" ng-show="toolBar.showSearch">
      <div class="md-toolbar-tools">
          <md-button ng-click="toolBar.showSearch = !toolBar.showSearch" aria-label="Back">
              <ng-md-icon icon="arrow_back"></ng-md-icon>
          </md-button>
          <h3 flex="10">
              Back
          </h3>
          <md-input-container md-theme="input" flex>
              <label>&nbsp;</label>
              <input ng-model="search.who" placeholder="enter search">
          </md-input-container>
          <md-button aria-label="Search" ng-click="toolBar.showSearch = !toolBar.showSearch">
              <ng-md-icon icon="search"></ng-md-icon>
          </md-button>
          <!--<md-button aria-label="Open Settings" ng-click="showListBottomSheet($event)">-->
              <!--<ng-md-icon icon="more_vert"></ng-md-icon>-->
          <!--</md-button>-->
          <md-menu>
              <!-- Trigger element is a md-button with an icon -->
              <md-button data-ng-click="toolbar.openMenu()" class="md-icon-button" aria-label="Open sample menu">
                  <ng-md-icon icon="more_vert"></ng-md-icon>
              </md-button>
              <md-menu-content>
                  <md-menu-item><md-button ng-click="doSomething()">Do Something</md-button></md-menu-item>
              </md-menu-content>
          </md-menu>
      </div>
  </md-toolbar>
  </div>
  {{{body}}}
  </body>
  <script src="js/jspm_packages/system.js"></script>
  <script src="js/jspm.config.js"></script>
  <script>
      System.import('js/site');
  </script>
</html>
