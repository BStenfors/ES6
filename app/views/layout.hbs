<!DOCTYPE html>
<html ng-app="app">
  <head>
    <title>{{title}}</title>
    <!--<link rel='stylesheet' href='/stylesheets/style.css' />-->
    <link rel="stylesheet" href="js/jspm_packages/github/angular/bower-material@0.10.0/angular-material.css" />
      <link rel="stylesheet" href="js/jspm_packages/npm/angular-grid@1.12.4/dist/angular-grid.css" />
      <link rel="stylesheet" href="js/jspm_packages/npm/angular-grid@1.12.4/dist/theme-fresh.css" />
    <script src="js/jspm_packages/system.js"></script>
    <script src="js/jspm.config.js"></script>
    <script>
        System.import('js/site');
    </script>

    <!--<script src="//localhost:35729/livereload.js"></script>-->
  </head>
  <body layout="column">
  <md-toolbar ng-show="!showSearch" >
      <div class="md-toolbar-tools" ng-controller="sideNavCtrl as sideNav">
          <md-button ng-click="sideNav.toggleSideNav('left')" hide-gt-md aria-label="Menu">
              <ng-md-icon icon="menu"></ng-md-icon>
          </md-button>
          <h3>
              Dashboard
          </h3>
          <span flex></span>
          <md-button aria-label="Search" ng-click="showSearch = !showSearch">
              <ng-md-icon icon="search"></ng-md-icon>
          </md-button>
          <md-button aria-label="Open Settings" ng-click="showListBottomSheet($event)">
              <ng-md-icon icon="more_vert"></ng-md-icon>
          </md-button>
      </div>
      <md-tabs md-stretch-tabs class="md-primary" md-selected="data.selectedIndex">
          <!--<md-tab id="tab1" aria-controls="tab1-content">-->
              <!--Kansas State-->
          <!--</md-tab>-->
          <!--<md-tab id="tab2" aria-controls="tab2-content">-->
              <!--All Big 12-->
          <!--</md-tab>-->
{{#each tabs}}
    <md-tab >
        {{name}}
    </md-tab>
    {{/each}}

      </md-tabs>
  </md-toolbar>
  <md-toolbar class="md-hue-1" ng-show="showSearch">
      <div class="md-toolbar-tools">
          <md-button ng-click="showSearch = !showSearch" aria-label="Back">
              <ng-md-icon icon="arrow_back"></ng-md-icon>
          </md-button>
          <h3 flex="10">
              Back
          </h3>
          <md-input-container md-theme="input" flex>
              <label>&nbsp;</label>
              <input ng-model="search.who" placeholder="enter search">
          </md-input-container>
          <md-button aria-label="Search" ng-click="showSearch = !showSearch">
              <ng-md-icon icon="search"></ng-md-icon>
          </md-button>
          <md-button aria-label="Open Settings" ng-click="showListBottomSheet($event)">
              <ng-md-icon icon="more_vert"></ng-md-icon>
          </md-button>
      </div>
  </md-toolbar>
  {{{body}}}
  </body>
</html>
